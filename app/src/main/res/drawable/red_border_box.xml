<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>

            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#FF0000" />
                </shape>
            </item>

            <item
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp"
                android:right="2dp">
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#FFFFFF"/>
                </shape>
            </item>

        </layer-list>

    </item>



</selector>